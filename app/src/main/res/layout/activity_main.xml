<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_padding">

        <!-- 초기 화면 -->
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_recommendation"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/title_margin_bottom"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_travel_type"
                android:textColor="@android:color/white"
                android:textSize="@dimen/subtitle_text_size"
                android:layout_marginBottom="@dimen/subtitle_margin_bottom"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin_bottom"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:id="@+id/travelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_travel_type_detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/card_title_text_size"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/card_title_margin_bottom"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <RadioGroup
                        android:id="@+id/travelTypeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/relaxationRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/relaxation"
                            android:textSize="@dimen/radio_text_size"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/radio_padding"
                            android:layout_marginBottom="@dimen/radio_margin_bottom"
                            android:minHeight="@dimen/radio_min_height" />

                        <RadioButton
                            android:id="@+id/sightseeingRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sightseeing"
                            android:textSize="@dimen/radio_text_size"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/radio_padding"
                            android:layout_marginBottom="@dimen/radio_margin_bottom"
                            android:minHeight="@dimen/radio_min_height" />

                        <RadioButton
                            android:id="@+id/adventureRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/adventure"
                            android:textSize="@dimen/radio_text_size"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/radio_padding"
                            android:layout_marginBottom="@dimen/radio_margin_bottom"
                            android:minHeight="@dimen/radio_min_height" />

                        <RadioButton
                            android:id="@+id/cultureRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/culture"
                            android:textSize="@dimen/radio_text_size"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/radio_padding"
                            android:layout_marginBottom="@dimen/radio_margin_bottom"
                            android:minHeight="@dimen/radio_min_height" />

                        <RadioButton
                            android:id="@+id/anywhereRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/anywhere"
                            android:textSize="@dimen/radio_text_size"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/radio_padding"
                            android:minHeight="@dimen/radio_min_height" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/selectButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/find_destination"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white"
                android:elevation="4dp"
                android:layout_marginBottom="@dimen/screen_padding" />

        </LinearLayout>

        <!-- 주사위 애니메이션 -->
        <ImageView
            android:id="@+id/diceImage"
            android:layout_width="@dimen/dice_size"
            android:layout_height="@dimen/dice_size"
            android:layout_centerInParent="true"
            android:src="@drawable/dice_icon"
            android:visibility="gone" />

        <!-- 결과 화면 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_margin="@dimen/screen_padding"
            app:cardCornerRadius="@dimen/result_card_corner_radius"
            app:cardElevation="@dimen/result_card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/result_card_padding">

                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_destination"
                    android:textSize="@dimen/result_title_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/result_title_margin_bottom"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/destinationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/destination_format"
                    android:textSize="@dimen/destination_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/destination_margin_bottom"
                    android:maxLines="3"
                    android:ellipsize="end" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="@dimen/divider_margin_bottom" />

                <TextView
                    android:id="@+id/weatherText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weather"
                    android:textSize="@dimen/info_text_size"
                    android:textColor="@color/dark_gray"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/budgetText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/budget"
                    android:textSize="@dimen/info_text_size"
                    android:textColor="@color/dark_gray"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:textSize="@dimen/info_text_size"
                    android:textColor="@color/dark_gray"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="@dimen/divider_margin_bottom" />

                <TextView
                    android:id="@+id/tipText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tip"
                    android:textSize="@dimen/tip_text_size"
                    android:textColor="@color/medium_gray"
                    android:background="@drawable/tip_background"
                    android:padding="@dimen/tip_padding"
                    android:layout_marginBottom="@dimen/tip_margin_bottom"
                    android:maxLines="4"
                    android:ellipsize="end" />

                <Button
                    android:id="@+id/retryButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/retry_button_height"
                    android:text="@string/try_again"
                    android:textSize="@dimen/retry_button_text_size"
                    android:background="@drawable/button_selector_secondary"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>